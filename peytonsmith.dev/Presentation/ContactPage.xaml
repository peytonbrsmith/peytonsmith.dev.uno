<Page x:Class="peytonsmith.dev.Presentation.ContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:peytonsmith.dev.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:uer="using:Uno.Extensions.Reactive.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:utum="using:Uno.Toolkit.UI.Material"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:um="using:Uno.Material"
      xmlns:ut="using:Uno.Themes"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer>

    <utu:AutoLayout
      VerticalAlignment="Stretch"
      utu:SafeArea.Insets="VisibleBounds">

      <utu:TabBar Style="{StaticResource ColoredTopTabBarStyle}" utu:SafeArea.Insets="VisibleBounds" SelectedIndex="2">
                <utu:TabBar.Items>
                    <utu:TabBarItem uen:Navigation.Request="/Home" Content="HOME">
                        <utu:TabBarItem.Icon>
                            <SymbolIcon Symbol="Home" />
                        </utu:TabBarItem.Icon>
                    </utu:TabBarItem>
                    <utu:TabBarItem uen:Navigation.Request="/About" Content="ABOUT">
                        <utu:TabBarItem.Icon>
                            <SymbolIcon Symbol="Contact" />
                        </utu:TabBarItem.Icon>
                    </utu:TabBarItem>
                    <utu:TabBarItem uen:Navigation.Request="/Contact" Content="Contact">
                        <utu:TabBarItem.Icon>
                            <SymbolIcon Symbol="Account" />
                        </utu:TabBarItem.Icon>
                    </utu:TabBarItem>
                </utu:TabBar.Items>
            </utu:TabBar>

    </utu:AutoLayout>

  </ScrollViewer>
</Page>
